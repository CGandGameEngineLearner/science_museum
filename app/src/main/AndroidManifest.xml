        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".common.user.ModifyUserActivity"></activity>
        <activity android:name=".common.user.SignUpActivity" />
        <activity android:name=".common.user.LoginActivity" />
