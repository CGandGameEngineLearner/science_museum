        <activity android:name=".ui.home.VisitByAppointmentActivity" />
        <activity android:name=".ui.home.news.NewsListActivity" />
        <activity android:name=".common.ArticleActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScienceMuseumActivity"
            android:label="@string/title_activity_app_store"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>