<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.science_museum.common.user.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="37dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="请登录"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editViewUID"
            android:layout_width="380dp"
            android:layout_height="51dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:hint="账号"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editViewUID" />

        <EditText
            android:id="@+id/editViewPassword"
            android:layout_width="380dp"
            android:layout_height="54dp"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:hint="@string/please_input_password"
            android:inputType="textPassword" />






        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorGrey"
            android:text="登录"
            android:layout_gravity="center"
            android:textColor="@color/colorBlue"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textViewLoginState"
            app:layout_constraintStart_toStartOf="@+id/editViewNameOrMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColorHint="@color/colorRed"
            android:ems="10"
            android:hint="" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
